<Page x:Class="KEKPlayer.Pages.TrackOnAirPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KEKPlayer.Pages"
      mc:Ignorable="d" 
      DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=TrackOnAirPageViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TrackOnAirPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <Image Grid.Row="0" Source="{Binding ImageSource}" HorizontalAlignment="Center" VerticalAlignment="Center">
            
        </Image>
        <Button Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Command="{Binding AddNewCompostion}">
            <TextBlock Text="Выбрать трек +"/>
            
        </Button>

        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding CompostionName}" >
            
        </TextBlock>
        
    </Grid>
</Page>
